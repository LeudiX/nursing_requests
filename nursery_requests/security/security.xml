<odoo>
    <!-- Security Groups -->

    <!-- Nurse Group -->
    <!--Can read and
    create nursery requests-->
    <record id="group_nurse" model="res.groups">
        <field name="name">Nurse</field>
        <field name="category_id" ref="base.module_category_inventory" />
    </record>

    <!-- Storekeeper Group -->
    <!--Can
    read and write nursery requests.-->
    <record id="group_storekeeper" model="res.groups">
        <field name="name">Storekeeper</field>
        <field name="category_id" ref="base.module_category_inventory" />
    </record>

    <!-- Manager Group -->
    <!--Full
    control over nursery requests (can read, create, update, delete). -->
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_inventory" />
        <field name="implied_ids" eval="[(4, ref('group_storekeeper'))]" />
    </record>

    <!-- Rule: Restrict Nurses from Inventory Operations -->
    <record id="nursery_request_nurse_rule" model="ir.rule">
        <field name="name">Nurses Cannot Access Full Inventory</field>
        <field name="model_id" ref="stock.model_stock_picking" />
        <field name="groups" eval="[(4, ref('childcare_management.group_nurse'))]" />
        <field name="domain_force">[('id', '=', False)]</field>
    </record>
</odoo>


  