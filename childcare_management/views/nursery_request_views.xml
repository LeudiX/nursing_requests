<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Action nursery.request -->
    <record id="action_nursery_request" model="ir.actions.act_window">
        <field name="name">Nursery Request</field>
        <field name="res_model">nursery.request</field>
        <field name="view_mode">tree,form,search</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                There is no examples click here to add new Nursery Request.
            </p>
        </field>
    </record>

    <!-- Menu Item for Nursery Requests (Only Visible to Nurses & Storekeepers) -->
    <menuitem id="menu_nursery_requests_root" name="Nursery Requests" parent="stock.menu_stock_root"
        sequence="100" />

    <menuitem id="menu_nursery_requests" name="Nursery Request" parent="menu_nursery_requests_root"
        action="action_nursery_request"
        sequence="10" />

    <!-- Form View for Nursery Requests -->
    <record id="view_nursery_request_form" model="ir.ui.view">
        <field name="name">nursery.request.form</field>
        <field name="model">nursery.request</field>
        <field name="arch" type="xml">
            <form string="Nursery Supply Request">
                <header>
                    <field name="state" widget="statusbar"
                        options="{'yellow': 'draft', 'green': 'approved', 'red': 'denied'}" />
                    <button name="action_approve" string="Approve" type="object"
                        class="oe_highlight" invisible="[('state', '!=', 'draft')]" />
                    <button name="action_deny" string="Deny" type="object" class="oe_secondary"
                        invisible="[('state', '!=', 'draft')]" />
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="nurse_id" />
                        <field name="doctor_id" />
                        <field name="state" widget="statusbar" />
                        <field name="date_requested" />
                        <field name="date_processed" />
                    </group>
                    <notebook>
                        <page string="Requested Items">
                            <field name="request_line_ids">
                                <tree editable="bottom">
                                    <field name="product_id"
                                        domain="[('categ_id.name', 'in', ['Medical Supplies', 'Child Medications'])]" />
                                    <field name="quantity" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" />
                    <field name="activity_ids" />
                    <field name="message_ids" options="{'post_refresh': 'recipients'}" />
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View for Storekeepers (Manage Requests) -->
    <record id="view_nursery_request_tree" model="ir.ui.view">
        <field name="name">nursery.request.tree</field>
        <field name="model">nursery.request</field>
        <field name="arch" type="xml">
            <tree string="Nursery Supply Requests" class="o_we_bg_filter bg-blue-50"
                decoration-warning="state == 'draft'"
                decoration-success="state == 'approved'" decoration-danger="state == 'denied'">
                <field name="name" readonly='1' />
                <field name="nurse_id" readonly='1' />
                <field name="doctor_id" readonly='1' />
                <field name="state" widget="statusbar" readonly='1' />
                <field name="date_requested" readonly='1' />
                <field name="date_processed" readonly='1' />
                <button name="action_approve" string="Approve" type="object"
                    invisible="[('state', '!=', 'draft')]" class="oe_highlight" />
                <button name="action_deny" string="Deny" type="object"
                    invisible="[('state', '!=', 'draft')]" class="oe_secondary" />
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_nursery_request_search" model="ir.ui.view">
        <field name="name">nursery.request.search</field>
        <field name="model">nursery.request</field>
        <field name="arch" type="xml">
            <search string="Search Nursery Requests">
                <field name="name"
                    filter_domain="['|','|', ('name', 'ilike', self), ('state', 'ilike', self), ('nurse_id','ilike', self), ('doctor_id','ilike', self)]" />
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]"
                        context="{'group_by':'name'}" />
                    <filter string="State" name="state" domain="[]"
                        context="{'group_by':'state'}" />
                    <filter string="Nurse" name="nurse_id" domain="[]"
                        context="{'group_by':'nurse_id'}" />
                    <filter string="Doctor" name="nurse_id" domain="[]"
                        context="{'group_by':'doctor_id'}" />
                </group>
            </search>
        </field>
    </record>
</odoo>