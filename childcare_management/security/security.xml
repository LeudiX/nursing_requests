<odoo>
    <!-- Security Groups -->
    <record id="group_nurse" model="res.groups">
        <field name="name">Nurse</field>
    </record>
    
    <record id="group_storekeeper" model="res.groups">
        <field name="name">Storekeeper</field>
    </record>
    
    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_inventory"/>
    </record>
    
    <!-- Record Rules -->
    <record id="nursery_request_nurse_rule" model="ir.rule">
        <field name="name">Nursery Requests: Nurses Can Only See Their Own Requests</field>
        <field name="model_id" ref="model_nursery_request"/>
        <field name="domain_force">[['nurse_id', '=', user.id]]</field>
        <field name="groups" eval="[(4, ref('group_nurse'))]"/>
    </record>

    <record id="nursery_request_storekeeper_rule" model="ir.rule">
        <field name="name">Nursery Requests: Storekeepers Can See All</field>
        <field name="model_id" ref="model_nursery_request"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_storekeeper'))]"/>
    </record>

    <record id="nursery_request_manager_rule" model="ir.rule">
        <field name="name">Manager Requests: Managers Can See and Manage All Requests</field>
        <field name="model_id" ref="model_nursery_request"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_manager'))]"/>
    </record>
</odoo>
  